{% extends 'base.html.twig' %}

{% block title %}Hello AdminAddController!{% endblock %}

{% block body %}
<br>
<a href="{{path('admin')}}" class="btn btn-danger">Back</a>
<br><br>
{{form_start(CreateForm)}}
<div class="form-group">
{{ form_label(CreateForm.title)}}
{{form_widget(CreateForm.title)}}
</div>
<div class="form-group">
{{ form_label(CreateForm.author)}}
{{form_widget(CreateForm.author)}}
</div>
<div class="form-group">
{{ form_label(CreateForm.image)}}
{{form_widget(CreateForm.image)}}
</div>
<img style="max-width:200px" src="../assets/images/{{Product.image}}">
{{Product.image}}
<br><br>
<div class="form-group">
{{ form_label(CreateForm.price)}}
{{form_widget(CreateForm.price)}}
</div>
<div class="form-group">
{{form_label(CreateForm.category)}}
{{form_widget(CreateForm.category)}}
</div>
<div class="form-group">
{{ form_label(CreateForm.quantity)}}
{{form_widget(CreateForm.quantity)}}
</div>
<div class="form-group">
{{ form_label(CreateForm.content)}}
{{form_widget(CreateForm.content)}}
</div>
{{form_end(CreateForm)}}

{% for message in app.flashes('updated') %}
    <div class="alert alert-success">
        {{message}}
    </div>
{% endfor %}

{% endblock %}
